<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="347dp"
            android:layout_height="291dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp" app:srcCompat="@mipmap/ic_launcher"
                    android:layout_marginTop="24dp"
                    android:id="@+id/thumbnail" android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"/>
            <TextView
                    android:text="Recipe Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:id="@+id/recipeTitle"
                    android:layout_marginTop="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/thumbnail"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recipeTitle"
                    android:layout_marginTop="24dp"
                    android:textSize="16dp"
                    android:text="Ingredients"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/Ingredients" android:layout_toStartOf="@+id/linkButton"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="24dp"/>

            <Button android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/linkButton"
                    android:background="?android:attr/actionModeFindDrawable"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>